@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Inicio de Sesión";

}
@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}
@* ************** Content ************** *@
<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Register -->
            <div class="card px-sm-6 px-0">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center">
                        <a href="/" class="app-brand-link gap-2">
                            <img src="~/img/favicon/laboratorio-100.png" class="app-brand-logo demo">
                            @* <span class="app-brand-text demo text-heading fw-bold">@TempData.Peek("appName")</span> *@
                        </a>
                    </div>
                    <!-- /Logo -->
                    <h4 class="mb-1 text-center">Inicio de Sesión</h4>
                    <p class="mb-6 text-center">Ciencia y tecnología al servicio de tu camarón!</p>
                    <form id="formAuthentication" class="mb-6" asp-action="InicioSesion" asp-controller="Login" method="POST">
                        <div class="mb-6">
                            <label for="email" class="form-label">Usuario</label>
                            <input type="text" class="form-control no-upper" id="email" name="Usuario" placeholder="Ingresa tu usuario" autofocus required>
                        </div>
                        <div class="mb-6 form-password-toggle">
                            <label class="form-label" for="password">Contraseña</label>
                            <div class="input-group input-group-merge">
                                <input type="password" id="password" class="form-control no-upper" name="Contrasenia" placeholder="Ingresa tu contraseña" aria-describedby="password" required />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                        <div class="mb-6">
                            <button class="btn btn-primary d-grid w-100" type="submit">Login</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /Register -->
        </div>
    </div>
</div>
@await Html.PartialAsync("Sections/Toast/_ShowToast")
