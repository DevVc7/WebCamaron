                        <input type="text" class="form-control text-center" id="laboratorio" value="LAB001" disabled>
                    </div>
                </div>

                <div class="row mb-3 text-center">
                    <div class="col-md-6">
                        <label class="form-label">Vendedor A</label>
                        <div class="row">
                            <div class="col-md-6">
                                <select class="form-select text-center" id="nombreVendedorA">
                                    <option value="" disabled selected>Seleccione</option>
                                    <option value="Jaime Medina" data-codigo="222222222">Jaime Medina</option>
                                    <option value="Lupita Guadalupe" data-codigo="333333333">Lupita Guadalupe</option>
                                    <option value="Dipper Antonio" data-codigo="111111111">Dipper Antonio</option>
                                    <option value="Lucas Renato" data-codigo="444444444">Lucas Renato</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control text-center" id="codigoVendedorA" placeholder="Código" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Vendedor B</label>
                        <div class="row">
                            <div class="col-md-6">
                                <select class="form-select text-center" id="nombreVendedorB">
                                    <option value="" disabled selected>Seleccione</option>
                                    <option value="Jaime Medina" data-codigo="222222222">Jaime Medina</option>
                                    <option value="Lupita Guadalupe" data-codigo="333333333">Lupita Guadalupe</option>
                                    <option value="Dipper Antonio" data-codigo="111111111">Dipper Antonio</option>
                                    <option value="Lucas Renato" data-codigo="444444444">Lucas Renato</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control text-center" id="codigoVendedorB" placeholder="Código" readonly>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 border p-3">
                        <h5 class="text-center" id="vendedor1Nombre">VENDEDOR 1</h5>
                        <table class="table table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>Módulo</th>
                                    <th>Cupo Actual</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>xxxxxx 1</td>
                                    <td>10'000.000</td>
                                    <td><a href="#">Editar</a></td>
                                </tr>
                                <tr>
                                    <td>xxxxxxx 2</td>
                                    <td>7'000.000</td>
                                    <td><a href="#">Editar</a></td>
                                </tr>
                                <tr>
                                    <td>xxxxxxx 3</td>
                                    <td>4'000.000</td>
                                    <td><a href="#">Editar</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-6 border p-3">
                        <h5 class="text-center" id="vendedor2Nombre">VENDEDOR 2</h5>
                        <table class="table table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>Módulo</th>
                                    <th>Cupo Actual</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>xxxxxxxxxx 1</td>
                                    <td>2'000.000</td>
                                    <td><a href="#">Editar</a></td>
                                </tr>
                                <tr>
                                    <td>xxxxxxxxxxx 2</td>
                                    <td>2'000.000</td>
                                    <td><a href="#">Editar</a></td>
                                </tr>
                                <tr>
                                    <td>xxxxxxxxxxx 3</td>
                                    <td>5'000.000</td>
                                    <td><a href="#">Editar</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function actualizarOpciones() {
            let vendedorA = document.getElementById("nombreVendedorA").value;
            let vendedorB = document.getElementById("nombreVendedorB").value;
            let opcionesA = document.querySelectorAll("#nombreVendedorA option:not([disabled])");
            let opcionesB = document.querySelectorAll("#nombreVendedorB option:not([disabled])");

            opcionesA.forEach(op => {
                op.hidden = op.value && op.value === vendedorB;
            });
            opcionesB.forEach(op => {
                op.hidden = op.value && op.value === vendedorA;
            });
        }

        document.getElementById("nombreVendedorA").addEventListener("change", function() {
            let selectedOption = this.options[this.selectedIndex];
            document.getElementById("codigoVendedorA").value = selectedOption.getAttribute("data-codigo") || "";
            actualizarOpciones();
        });

        document.getElementById("nombreVendedorB").addEventListener("change", function() {
            let selectedOption = this.options[this.selectedIndex];
            document.getElementById("codigoVendedorB").value = selectedOption.getAttribute("data-codigo") || "";
            actualizarOpciones();
        });

        actualizarOpciones();
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            function actualizarOpciones() {
                let vendedorA = document.getElementById("nombreVendedorA").value;
                let vendedorB = document.getElementById("nombreVendedorB").value;
                let opcionesA = document.querySelectorAll("#nombreVendedorA option:not([disabled])");
                let opcionesB = document.querySelectorAll("#nombreVendedorB option:not([disabled])");

                opcionesA.forEach(op => {
                    op.hidden = op.value && op.value === vendedorB;
                });
                opcionesB.forEach(op => {
                    op.hidden = op.value && op.value === vendedorA;
                });
            }

            document.getElementById("nombreVendedorA").addEventListener("change", function () {
                let selectedOption = this.options[this.selectedIndex];
                let codigoInput = document.getElementById("codigoVendedorA");
                let nombreHeader = document.getElementById("vendedor1Nombre");

                if (selectedOption.value) {
                    codigoInput.value = selectedOption.getAttribute("data-codigo") || "";
                    nombreHeader.textContent = selectedOption.value;
                } else {
                    codigoInput.value = "";
                    nombreHeader.textContent = "VENDEDOR 1";
                }

                actualizarOpciones();
            });

            document.getElementById("nombreVendedorB").addEventListener("change", function () {
                let selectedOption = this.options[this.selectedIndex];
                let codigoInput = document.getElementById("codigoVendedorB");
                let nombreHeader = document.getElementById("vendedor2Nombre");

                if (selectedOption.value) {
                    codigoInput.value = selectedOption.getAttribute("data-codigo") || "";
                    nombreHeader.textContent = selectedOption.value;
                } else {
                    codigoInput.value = "";
                    nombreHeader.textContent = "VENDEDOR 2";
                }

                actualizarOpciones();
            });

            actualizarOpciones();
        });
    </script>



</body>
</html>