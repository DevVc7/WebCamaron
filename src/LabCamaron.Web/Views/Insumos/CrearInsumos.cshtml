@model InsumosVm.CrearInsumos
@{
    ViewData["Title"] = "Insumos";
}

@* ************** Content ************** *@
<div class="row">
    <!-- Basic Layout -->
    <div class="col-xxl">
        <div class="card mb-6">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Categoría</h5> <small class="text-muted float-end">@Context.ObtenerNombreModulo(MenuInsumos.CodigoMenu)</small>
            </div>
            <div class="card-body pt-1">
                <form id="formAccountSettings" asp-controller="Insumos" asp-action="CrearInsumos" method="POST">
                    <div class="row g-12">
                        <div class="col-md-12 text-danger text-end fw-bold mb-2">
                          <span>Los campos señalados con * son obligatorios.</span>
                        </div>
                    </div>
                    <div class="row g-6">
                        <div class="col-md-6">
                            <label for="Laboratorio" class="form-label required">Laboratorio</label>
                            <select class="form-select" asp-for="IdLaboratorio" id="ComboLaboratorio" name="IdLaboratorio" required autofocus></select>
                        </div>
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6">
                            <label for="Sku" class="form-label required">Sku</label>
                            <input asp-for="Sku" class="form-control" type="text" id="Sku"
                                   name="Sku" maxlength="150" required autofocus />
                        </div>
                        <div class="col-md-6">
                            <label for="Codigo" class="form-label required">Código</label>
                            <input asp-for="Codigo" class="form-control" type="text" id="Codigo"
                                   name="Codigo" maxlength="150" required autofocus />
                        </div>
                        <div class="col-md-12">
                            <label for="Nombre" class="form-label required">Nombre</label>
                            <input asp-for="Nombre" class="form-control" type="text" id="Nombre"
                                   name="Nombre" maxlength="150" required autofocus />
                        </div>
                        <div class="col-md-6">
                            <label for="IdCategoria" class="form-label required">Categoría</label>
                            <select class="form-select" asp-for="IdCategoria" id="ComboCategoria" name="IdCategoria" required autofocus></select>
                        </div>
                        <div class="col-md-6">
                            <label for="IdMarca" class="form-label required">Marca</label>
                            <select class="form-select" asp-for="IdMarca" id="ComboMarca" name="IdMarca" required autofocus></select>
                        </div>
                        <div class="col-md-6">
                            <label for="Presentacion" class="form-label">Presentación</label>
                            <input asp-for="Presentacion" class="form-control" type="number"
                                   name="Presentacion" id="Presentacion" step="0.00000000001" min="0" autofocus />
                        </div>
                        <div class="col-md-2">
                            <label for="TipoUnidadMedida" class="form-label required">Unidad Medida</label>
                            <select class="form-select" id="ComboTipoUnidadMedida" name="TipoUnidadMedida" required autofocus></select>
                        </div>
                        <div class="col-md-4">
                            <label for="UnidadMedida" class="form-label required">Tipo Unidad Medida</label>
                            <select class="form-select" asp-for="UnidadMedida" id="ComboUnidadMedida" name="UnidadMedida" required autofocus></select>
                        </div>
                    </div>
                    <div class="mt-6">
                        @if(Context.TienePermiso(MenuInsumos.CodigoMenu, MenuInsumos.Permisos.Crear))
                        {
                          <button type="submit" class="btn btn-primary me-3">Crear</button>
                        }
                        <a asp-action="Index" asp-controller="Insumos" type="reset" class="btn btn-outline-secondary">Regresar</a>
                    </div>
                  </form>
            </div>
        </div>
    </div>
    <!-- Basic with Icons -->
</div>
<script>let isActualizar = false;</script>

<script src="~/js/insumos/insumos.js"></script>
@await Html.PartialAsync("Sections/Toast/_ShowToast")
