@model UsuarioVm
@{
    ViewData["Title"] = "Usuarios";
}

@* ************** Content ************** *@
<div class="row">
    <!-- Basic Layout -->
    <div class="col-xxl">
        <div class="card mb-6">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Usuarios</h5> <small class="text-muted float-end">@Context.ObtenerNombreModulo(MenuUsuario.CodigoMenu)</small>
            </div>
            <div class="card-body pt-1">
                <div class="nav-align-top nav-tabs-shadow mb-6">
                    <ul class="nav nav-tabs nav-fill" role="tablist">
                        <li class="nav-item">
                            <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#navs-datos-generales" aria-controls="navs-datos-generales" aria-selected="false"><span class="d-none d-sm-block"><i class="tf-icons bx bx-user bx-sm me-1_5 align-text-bottom"></i>Datos Generales</span><i class="bx bx-sm bx-user d-sm-none"></i></button>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="navs-datos-generales" role="tabpanel">
                            <form id="formAccountSettings" asp-controller="Usuario" asp-action="CrearUsuario" method="POST">
	                            <div class="row g-12">
	                              <div class="col-md-12 text-danger text-end fw-bold mb-2">
		                            <span>Los campos señalados con * son obligatorios.</span>
	                              </div>
	                            </div>
	                            <div class="row g-6">
		                            <div class="col-md-6">
			                            <label for="Codigo" class="form-label required">Código</label>
			                            <input asp-for="Codigo" class="form-control" type="text" id="Codigo"
			                              name="Codigo" min="5" maxlength="20" required autofocus/>
		                            </div>
		                            <div class="col-md-12">
			                            <label for="Descripcion" class="form-label required">Descripción</label>
			                            <input asp-for="Descripcion" class="form-control" type="text" id="Descripcion"
			                              name="Descripcion" maxlength="150" required autofocus/>
		                            </div>
	                            </div>
	                            <div class="mt-6">
		                            @if(Context.TienePermiso(MenuUsuario.CodigoMenu, MenuUsuario.Permisos.Crear))
		                            {
		                              <button type="submit" class="btn btn-primary me-3">Crear</button>
		                            }
		                            <a asp-action="Index" asp-controller="Usuario" type="reset" class="btn btn-outline-secondary">Regresar</a>
	                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Basic with Icons -->
</div>
@await Html.PartialAsync("Sections/Toast/_ShowToast")
