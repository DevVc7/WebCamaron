@model UsuarioVm
@{
    ViewData["Title"] = "Usuarios";
}

@* ************** Content ************** *@
<div class="row">
    <!-- Basic Layout -->
    <div class="col-xxl">
        <div class="card mb-6">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Usuarios</h5> <small class="text-muted float-end">@Context.ObtenerNombreModulo(MenuUsuario.CodigoMenu)</small>
            </div>
            <div class="row card-body pt-1">
                <div class="nav-align-top nav-tabs-shadow mb-6 col-md-9 col-lg-9">
                    <ul class="nav nav-tabs nav-fill" role="tablist">
                        @if(Context.TienePermiso(MenuUsuario.CodigoMenu, MenuUsuario.Permisos.Editar))
                        {
                            <li class="nav-item">
                                <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#navs-datos-generales" aria-controls="navs-datos-generales" aria-selected="false">
                                    <span class="d-none d-sm-block"><i class="tf-icons bx bx-user bx-sm me-1_5 align-text-bottom"></i>Datos Generales</span><i class="bx bx-sm bx-user d-sm-none"></i>
                                </button>
                            </li>
                        }
                        @if(Context.TienePermiso(MenuUsuario.CodigoMenu, MenuUsuario.Permisos.EditarRoles))
                        {
                            <li class="nav-item">
                                <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-roles-usuario" aria-controls="navs-roles-usuario" aria-selected="false">
                                    <span class="d-none d-sm-block"><i class="tf-icons bx bx-pin bx-sm me-1_5 align-text-bottom"></i>Roles</span><i class="bx bx-sm bx-pin d-sm-none"></i>
                                </button>
                            </li>
                        }
                        
                        @if(Context.TienePermiso(MenuUsuario.CodigoMenu, MenuUsuario.Permisos.EditarModulos))
                        {
                            <li class="nav-item">
                                <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-permisos-usuario" aria-controls="navs-permisos-usuario" aria-selected="false">
                                    <span class="d-none d-sm-block"><i class="tf-icons bx bx-lock-open bx-sm me-1_5 align-text-bottom"></i>MÃ³dulos</span><i class="bx bx-sm bx-lock-open d-sm-none"></i>
                                </button>
                            </li>
                        }
                    </ul>
                    <div class="tab-content">
                        @if(Context.TienePermiso(MenuUsuario.CodigoMenu, MenuUsuario.Permisos.Editar))
                        {
                            <div class="tab-pane fade show active" id="navs-datos-generales" role="tabpanel">
                                @await Html.PartialAsync("FormularioEditarUsuario", Model)
                            </div>
                        }
                        @if(Context.TienePermiso(MenuUsuario.CodigoMenu, MenuUsuario.Permisos.EditarRoles))
                        {
                            <div class="tab-pane fade show" id="navs-roles-usuario" role="tabpanel">
                                @await Html.PartialAsync("FormularioEditarRol", Model)
                            </div>
                        }
                        @if(Context.TienePermiso(MenuUsuario.CodigoMenu, MenuUsuario.Permisos.EditarModulos))
                        {
                            <div class="tab-pane fade show" id="navs-permisos-usuario" role="tabpanel">
                                @await Html.PartialAsync("FormularioEditarModulo", Model)                            
                            </div>
                        }
                    </div>
                </div>
                
                <div class="col-md-3 col-lg-3 order-2 mb-6">
                    @await Html.PartialAsync("FormularioAccionUsuario", Model)
                </div>
            </div>
        </div>
    </div>
    <!-- Basic with Icons -->
</div>
@await Html.PartialAsync("Sections/Toast/_ShowToast")
