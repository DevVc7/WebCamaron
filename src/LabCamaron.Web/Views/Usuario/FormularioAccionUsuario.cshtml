@model UsuarioVm
<div class="card h-100">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="card-title m-0 me-2">Acciones</h5>
    </div>
    <div class="card-body pt-4">
        <ul class="p-0 m-0">
            <li class="d-flex align-items-center">
                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                    @if(Context.TienePermiso(MenuUsuario.CodigoMenu, MenuUsuario.Permisos.ReestablecerContrasenia) && Model.Activo)
                    {
                        <div class="d-flex flex-grow-1">
                            <form asp-controller="Usuario" asp-action="ReestablecerContrasenia" method="post" style="display:inline;" class="w-100">
                                <input type="hidden" name="Codigo" id="Codigo" asp-for="Codigo" />
                                <button type="submit" class="btn btn-warning w-100">Reestablecer Clave</button>
                            </form>
                        </div>
                    }
                    @if (Context.TienePermiso(MenuUsuario.CodigoMenu, MenuUsuario.Permisos.Eliminar) && Model.Activo)
                    {
                        <div class="d-flex flex-grow-1">
                            <form asp-controller="Usuario" asp-action="EliminarUsuario" method="post" style="display:inline;" class="w-100">
                                <input type="hidden" name="Codigo" id="Codigo" asp-for="Codigo" />
                                <button type="submit" class="btn btn-danger w-100">Eliminar Usuario</button>
                            </form>
                        </div>
                    }
                    <div class="d-flex flex-grow-1">
                        <a asp-action="Index" asp-controller="Usuario" type="reset" class="btn btn-outline-secondary w-100">Regresar</a>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>
